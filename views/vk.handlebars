<div class="container mt-4">
  <h2>Группы вк</h2>
  <form method="post">
    <div class="form-group">
      <label for="groupId">Новая группа:</label>
      <input type="text" class="form-control" id="groupId" name="groupId" />
    </div>
    <div class="form-group">
      <button type="submit" name="add_group" class="btn btn-primary" value="true">Добавить группу</button>
    </div>
  </form>
  <table class="table">
    <thead>
      <tr>
        <th>Группа</th>
        <th>Удалить группу</th>
      </tr>
    </thead>
    <tbody>
      {{#each groupIds}}
        <tr>
          <td>{{this}}</td>
          <td>
            <form method="post">
              <input type="hidden" name="groupId" value="{{this}}" />
              <button type="submit" name="remove_group" value="true" class="btn btn-danger">Удалить</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>